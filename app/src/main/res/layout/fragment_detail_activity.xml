<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mosthype.DetailActivityFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
            <TextView
                android:id="@+id/title_of_movie"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:paddingLeft="20dp"
                android:background="#000000"
                android:textSize="35dp"
                android:gravity="center_vertical"
                android:textColor="#ffffff"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <ImageView
                android:id="@+id/movie_poster"
                android:layout_below="@id/title_of_movie"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding= "15dp"
                />

            <TextView
                android:id="@+id/date_of_movie"
                android:layout_below="@id/title_of_movie"
                android:layout_toRightOf="@id/movie_poster"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingTop="15dp"
                android:paddingRight="0dp"
                android:paddingBottom="0dp"
                android:textSize="25dp"
                />


            <TextView
                android:id="@+id/rating_of_movie"
                android:layout_below="@id/date_of_movie"
                android:layout_toRightOf="@id/movie_poster"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textStyle="bold"
                android:textSize="20dp"
                />


            <TextView
                android:id="@+id/overview_of_movie"
                android:layout_below="@id/movie_poster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="15dp"
                android:paddingTop="0dp"

                />

            <LinearLayout
                android:id="@+id/linear_layout"
                android:layout_below="@id/overview_of_movie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000000"/>
                
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Watch Trailer 1"
                    android:paddingLeft="15dp"
                    android:id="@+id/trailer1"
                    android:gravity="center_vertical"
                    android:onClick="onClickTrailer1"
                    android:layout_marginTop="15dp"
                    />


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Watch Trailer 2"
                    android:paddingLeft="15dp"
                    android:id="@+id/trailer2"
                    android:gravity="center_vertical"
                    android:onClick="onClickTrailer2"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000000"/>

                <TextView
                    android:id="@+id/reviews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reviews:"
                    android:paddingTop="0dp"

                    />
            </LinearLayout>

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
